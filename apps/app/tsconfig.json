{
    "extends": "@poveroh/tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"],
            "@poveroh/ui/*": ["../../packages/ui/src/*"],
            "@poveroh/types/*": ["../../packages/types/*"],
            "@poveroh/utils/*": ["../../packages/utils/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../../packages/utils/crypto.ts"
    ],
    "exclude": ["node_modules"]
}
